

<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Oui">@ButtonOui</MudButton>
        <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="Non">@ButtonNon</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }

    [Parameter] public string ButtonOui { get; set; }
    [Parameter] public string ButtonNon { get; set; }

    void Oui() => MudDialog.Close(DialogResult.Ok(true));
    void Non() => MudDialog.Close(DialogResult.Ok(false));
    void Cancel() => MudDialog.Cancel();
}

