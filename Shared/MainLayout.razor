@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <MudThemeProvider />
        <MudDialogProvider />
        <MudSnackbarProvider />

        <MudLayout>
            <MudAppBar Elevation="0">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                <MudSpacer />
                @*<MudText>Administrateur</MudText>*@
                <LogoutMenu/>
            </MudAppBar>
            <MudDrawer @bind-Open="_drawerOpen" Elevation="1" >
                <MudDrawerHeader Style="@($"color:{Colors.LightGreen.Lighten4}; background:{Colors.BlueGrey.Darken1};")">
                    <MudText Typo="Typo.h6" >GESTION FINANCE</MudText>
                </MudDrawerHeader>
                <NavMenu />
            </MudDrawer>
            <MudMainContent>
                @*<MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">*@
                    @Body
                @*</MudContainer>*@
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <OSIET_Finance.Shared.Autorisation.Redirection />
    </NotAuthorized>
</AuthorizeView>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}